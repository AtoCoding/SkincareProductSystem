<Window x:Class="Wpf_SkincareUI.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        mc:Ignorable="d"
        Title="OrderDetailsWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="171*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="50,50,50,50" Grid.ColumnSpan="2">
            <TextBlock Text="Order ID:" FontWeight="Bold"/>
            <TextBox Name="txtOrderId" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Date Created:" FontWeight="Bold"/>
            <TextBox Name="txtDateCreated" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Username:" FontWeight="Bold"/>
            <TextBox Name="txtUsername" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Products in Order:" FontWeight="Bold"/>
            <DataGrid Name="OrderDetailsGrid" AutoGenerateColumns="False" Height="200" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding SkincareProductId}" Width="100"/>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>