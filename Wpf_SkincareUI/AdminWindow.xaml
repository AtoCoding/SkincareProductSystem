<Window x:Class="Wpf_SkincareUI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        mc:Ignorable="d"
        Title="AdminWindow" Height="700" Width="1200" WindowStartupLocation="CenterScreen" Background="#F5F6FA">
    <Window.Resources>
        <!-- TextBox style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gray"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <TabControl Background="White" BorderThickness="0" Padding="10" Margin="10">
            <!-- Users Tab -->
            <TabItem Header="👤 Users" FontSize="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <DockPanel Margin="0,0,0,10">
                        <TextBox x:Name="SearchTextBox" Style="{StaticResource TextBoxStyle}" Width="300" ToolTip="Search users" TextChanged="SearchTextBox_TextChanged"/>
                        <Button Content="🔍 Search" Click="PerformSearch" Style="{StaticResource ButtonStyle}" Margin="10,0,0,0"/>
                    </DockPanel>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" x:Name="UsersDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding Fullname}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Role.Name}" Width="*"/>
                            <DataGridTextColumn Header="Skin Type" Binding="{Binding TypeOfSkin.Name}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="✏ Edit" Click="EditButton_Click" Style="{StaticResource ButtonStyle}" Background="#2196F3"/>
                                            <Button Content="🗑 Delete" Click="DeleteButton_Click" Style="{StaticResource ButtonStyle}" Background="#F44336" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Bottom Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="👁 View All" Click="PrintUsers_Click" Style="{StaticResource ButtonStyle}"/>
                        <Button Content="➕ Add" Click="AddButton_Click" Style="{StaticResource ButtonStyle}"/>
                        <Button Content="🔄 Refresh" Click="RefreshButton_Click" Style="{StaticResource ButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Products Tab (Placeholder for now) -->
            <TabItem Header="🧴 Products" FontSize="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <DockPanel Margin="0,0,0,10">
                        <TextBox x:Name="SearchProductTextBox" Style="{StaticResource TextBoxStyle}" Width="300" ToolTip="Search products" TextChanged="SearchProductTextBox_TextChanged"/>
                        <Button Content="🔍 Search" Click="PerformProductSearch" Style="{StaticResource ButtonStyle}" Margin="10,0,0,0" Width="100"/>
                    </DockPanel>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" x:Name="ProductsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category.Name}" Width="*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="✏ Edit" Click="EditProduct_Click" Style="{StaticResource ButtonStyle}" Background="#2196F3"/>
                                            <Button Content="🗑 Delete" Click="DeleteProduct_Click" Style="{StaticResource ButtonStyle}" Background="#F44336" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Bottom Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="👁 View All" Click="PrintProducts_Click" Style="{StaticResource ButtonStyle}"/>
                        <Button Content="➕ Add" Click="AddProduct_Click" Style="{StaticResource ButtonStyle}"/>
                        <Button Content="🔄 Refresh" Click="RefreshProducts_Click" Style="{StaticResource ButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Orders Tab (Placeholder for now) -->
            <TabItem Header="📦 Orders" FontSize="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <DockPanel Margin="0,0,0,10">
                        <TextBox x:Name="SearchOrderTextBox" Style="{StaticResource TextBoxStyle}" Width="300" ToolTip="Search orders" TextChanged="SearchOrderTextBox_TextChanged"/>
                        <Button Content="🔍 Search" Click="PerformOrderSearch" Style="{StaticResource ButtonStyle}" Margin="10,0,0,0"/>
                    </DockPanel>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" x:Name="OrdersDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Order ID" Binding="{Binding Id}" Width="*"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding User.Fullname}" Width="*"/>
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="*"/>
                            <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="👁 View" Click="ViewOrder_Click" Style="{StaticResource ButtonStyle}" Background="#FFC107"/>
                                            <Button Content="🗑 Delete" Click="DeleteOrder_Click" Style="{StaticResource ButtonStyle}" Background="#F44336" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Bottom Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="👁 View All" Click="PrintOrders_Click" Style="{StaticResource ButtonStyle}"/>
                        <Button Content="➕ Add" Click="AddOrder_Click" Style="{StaticResource ButtonStyle}"/>
                        <Button Content="🔄 Refresh" Click="RefreshOrders_Click" Style="{StaticResource ButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </TabItem>


            <!-- Statistics Tab (Placeholder for now) -->
            <TabItem Header="📊 Statistics" FontSize="16">
                <Grid>
                    <TextBlock Text="Statistics UI coming soon..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

