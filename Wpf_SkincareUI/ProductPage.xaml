<Window x:Class="Wpf_SkincareUI.ProductPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        Title="Product Management" Height="600" Width="1000">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <!-- Thanh tìm kiếm và bộ lọc -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="txtSearch" Width="200"/>
                <Button Content="Search" Width="50" Margin="5" Click="btnSearch_Click"/>

                <Button Content="Thêm sản phẩm" Width="120" Background="Green" Foreground="White" Click="AddProduct_Click" Margin="10 0"/>
            </StackPanel>

            <!-- Bảng danh sách sản phẩm -->
            <DataGrid x:Name="dgProducts" AutoGenerateColumns="False" Height="400" Margin="0 10 0 0">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Ảnh sản phẩm">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="3">
                                    <Image Source="{Binding Image}" Width="50" Height="50"/>

                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="ID" Binding="{Binding SkincareProductId}" Width="50"/>
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Name}" Width="100"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="100"/>
                    <DataGridTextColumn Header="Dung tích" Binding="{Binding Capacity}" Width="100"/>
                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice}" Width="100"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Thương hiệu" Binding="{Binding Brand.Name}" Width="100"/>
                    <DataGridTextColumn Header="Loại sản phẩm" Binding="{Binding Category.Name}" Width="100"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding IsAvailable}" Width="100"/>
                    <DataGridTemplateColumn Header="Hành động" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="✏" Width="30" Margin="5" Click="EditProduct_Click"/>
                                    <Button Content="🗑" Width="30" Margin="5" Click="DeleteProduct_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>