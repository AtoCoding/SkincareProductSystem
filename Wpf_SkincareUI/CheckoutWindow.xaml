<Window x:Class="Wpf_SkincareUI.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        mc:Ignorable="d"
        Title="CheckoutWindow" 
        Height="720" Width="1280"
        FontFamily="The Medic Demo"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Background="White" Height="60">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="1" Opacity="0.7"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Skincare Store" HorizontalAlignment="Center" Margin="10" FontSize="36" FontWeight="Bold" MouseLeftButtonDown="Homepage_MouseLeftButtonDown" Cursor="Hand"/>
                <TextBox Width="250" Height="30" Margin="15" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtWelcomMessage" Text="Hello, Guest!" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock x:Name="txtAccountBalance" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15" FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Grid.Row="1" Background="#EEE">
            <StackPanel x:Name="spAuthorize">
                <Button Content="Profile" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
                <Button Content="Cart" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
                <Button Content="Your order" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
                <Button Content="Skin type test" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Checkout Page -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" Background="#FFF1F1F1">
            <StackPanel>
                <TextBlock Text="Checkout" Margin="10" FontSize="28" FontWeight="Medium"/>

                <StackPanel Margin="20">
                    <TextBlock Text="Email" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="txtEmail" IsEnabled="False" Height="30" Margin="5 0 15 10" FontSize="16"/>

                    <TextBlock Text="Full Name" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="txtFullname" IsEnabled="False" Height="30" Margin="5 0 15 10" FontSize="16"/>

                    <TextBlock Text="Payment Method" FontSize="18" FontWeight="Bold"/>
                    <ComboBox x:Name="cbPaymentMethod" Height="30" Margin="5 0 15 10" FontSize="16">
                        <ComboBoxItem IsEnabled="False" Content="Credit Card"/>
                        <ComboBoxItem IsEnabled="False" Content="PayPal"/>
                        <ComboBoxItem IsEnabled="False" Content="Cash on Delivery"/>
                        <ComboBoxItem Content="Account balance"/>
                    </ComboBox>

                    <TextBlock Text="Order Summary" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtOrderSummary" FontSize="16" Foreground="#555" Margin="5 0 15 10"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                    <TextBlock Text="Total: " FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalPrice" FontSize="18" FontWeight="Bold" Foreground="#FF5733" Margin="5 0 0 0"/>
                </StackPanel>

                <Button x:Name="btnPlaceOrder" Content="Place Order" Width="200" Height="40" FontSize="18" Background="#FF5733" Foreground="White" HorizontalAlignment="Right" Margin="20" Click="btnPlaceOrder_Click" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>