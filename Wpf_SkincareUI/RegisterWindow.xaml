<Window x:Class="Wpf_SkincareUI.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        mc:Ignorable="d"
        Title="Register" Height="600" Width="500"
        Background="#FF929292"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Width="450" Background="White" CornerRadius="20" BorderBrush="#4C000000" BorderThickness="2">
            <StackPanel Margin="30">
                <Label Content="REGISTER" FontSize="30" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center"/>

                <Label Content="Username (Email)" FontSize="16"/>
                <TextBox x:Name="txtUsername" TextWrapping="Wrap" VerticalContentAlignment="Center" FontSize="14px" Padding="8px 0px" Width="400" Height="40"/>

                <Label Content="Password" FontSize="16"/>
                <PasswordBox x:Name="txtPassword" VerticalContentAlignment="Center" FontSize="14px" Padding="8px 0px" Width="400" Height="40"/>

                <Label Content="Confirm password" FontSize="16"/>
                <PasswordBox x:Name="txtConfirmPassword" VerticalContentAlignment="Center" FontSize="14px" Padding="8px 0px" Width="400" Height="40"/>

                <Label Content="Your name" FontSize="16"/>
                <TextBox x:Name="txtFullName" TextWrapping="Wrap" VerticalContentAlignment="Center" FontSize="14px" Padding="8px 0px" Width="400" Height="40"/>

                <Label Content="Gender" FontSize="16"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="rbMale" Content="Male" GroupName="Gender" Margin="10" FontSize="14"/>
                    <RadioButton x:Name="rbFemale" Content="Female" GroupName="Gender" Margin="10" FontSize="14"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10 30 0 0">
                    <Button Name="btnRegister" Content="Register" Background="#1976D2" Foreground="White" FontWeight="Bold" Width="180" Height="50" Margin="5" FontSize="16" Click="btnRegister_Click"/>
                    <Button Name="btnBackToLogin" Content="Back To Login" Background="#757575" Foreground="White" FontWeight="Bold" Width="180" Height="50" Margin="5" FontSize="16" Click="btnBackToLogin_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>