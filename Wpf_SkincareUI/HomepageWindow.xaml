<Window x:Class="Wpf_SkincareUI.HomepageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        mc:Ignorable="d"
        Title="HomepageWindow" 
        Height="720" Width="1280"
        FontFamily="The Medic Demo"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Background="White" Height="60">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="1" Opacity="0.7"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Skincare Store" HorizontalAlignment="Center" Margin="10" FontSize="36" FontWeight="Bold"/>
                <TextBox Width="250" Height="30" Margin="15" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtWelcomMessage" Text="Hello, Guest!" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15" FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Grid.Row="1" Background="#EEE">
            <StackPanel x:Name="spUnauthorize" Visibility="Visible">
                <Button x:Name="btnLogin" Content="Login" Width="180" Height="40" Margin="8" FontSize="18" Click="btnLogin_Click"/>
            </StackPanel>
            <StackPanel x:Name="spAuthorize" Visibility="Hidden">
                <Button Content="Profile" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
                <Button Content="Cart" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
                <Button Content="Your order" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
                <Button Content="Skin type test" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Body -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" Background="#FFF1F1F1">
            <StackPanel>
                <TextBlock Text="All products" Margin="10" FontSize="28" FontWeight="Medium"/>
                <StackPanel Margin="20 0">
                    <ItemsControl x:Name="ListViewProducts">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="15" Width="160" Height="240" Background="White" CornerRadius="8">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFDDDDDD" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="White" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <StackPanel>
                                        <Border Width="140" Height="140" CornerRadius="6" Margin="8">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="2"/>
                                            </Border.Effect>
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Image}"/>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock Margin="8" Text="{Binding UnitPrice, StringFormat={}{0:C}}" FontSize="20" FontFamily="Franklin Gothic Medium"/>
                                        <TextBlock Margin="8 0" Text="{Binding Name}" FontSize="18"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
