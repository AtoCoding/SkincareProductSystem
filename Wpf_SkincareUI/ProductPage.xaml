                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding IsAvailable}" Width="80"/>
                        <DataGridTemplateColumn Header="Hành động" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✏" Width="30" Margin="5" Click="EditProduct_Click"/>
                                        <Button Content="🗑" Width="30" Margin="5" Click="DeleteProduct_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>-->

            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button x:Name="btnFirst" Width="40" Height="30" Margin="3,0" Click="btnFirst_Click" 
            Background="#f0f0f0" BorderBrush="#d0d0d0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="⟪" FontWeight="Bold" Foreground="#4267B2"/>
                </Button>

                <Button x:Name="btnPrevious" Width="40" Height="30" Margin="3,0" Click="btnPrevious_Click" 
            Background="#f0f0f0" BorderBrush="#d0d0d0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="◂" FontWeight="Bold" Foreground="#4267B2"/>
                </Button>

                <Border Background="#4267B2" CornerRadius="4" Padding="10,5" Margin="8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Trang " Foreground="White"/>
                        <TextBlock x:Name="txtCurrentPage" Text="1" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text=" / " Foreground="White"/>
                        <TextBlock x:Name="txtTotalPages" Text="1" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Button x:Name="btnNext" Width="40" Height="30" Margin="3,0" Click="btnNext_Click" 
            Background="#f0f0f0" BorderBrush="#d0d0d0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="▸" FontWeight="Bold" Foreground="#4267B2"/>
                </Button>

                <Button x:Name="btnLast" Width="40" Height="30" Margin="3,0" Click="btnLast_Click" 
            Background="#f0f0f0" BorderBrush="#d0d0d0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="⟫" FontWeight="Bold" Foreground="#4267B2"/>
                </Button>

                <Border Margin="15,0,5,0" BorderBrush="#d0d0d0" BorderThickness="1" CornerRadius="4">
                    <ComboBox x:Name="cboPageSize" Width="60" SelectionChanged="cboPageSize_SelectionChanged" BorderThickness="0">
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="4" IsSelected="True"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>
                </Border>

                <TextBlock Text="dòng/trang" VerticalAlignment="Center" Margin="5,0" Foreground="#666"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>