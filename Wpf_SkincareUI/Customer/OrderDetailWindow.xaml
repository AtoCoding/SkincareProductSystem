<Window x:Class="Wpf_SkincareUI.OrderDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        mc:Ignorable="d"
        Title="HomepageWindow" 
        Height="720" Width="1280"
        FontFamily="The Medic Demo"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Background="White" Height="60">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="1" Opacity="0.7"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Skincare Store" HorizontalAlignment="Center" Margin="10" FontSize="36" FontWeight="Bold" MouseLeftButtonDown="Homepage_MouseLeftButtonDown" Cursor="Hand"/>
                <TextBox Width="250" Height="30" Margin="15" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtWelcomMessage" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock x:Name="txtAccountBalance" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15" FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Grid.Row="1" Background="#EEE">
            <StackPanel x:Name="spAuthorize">
                <Button Content="Profile" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
                <Button x:Name="btnCart" Content="Cart" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0" Click="btnCart_Click"/>
                <Button x:Name="btnMyOrders" Content="My orders" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0" Click="btnMyOrders_Click"/>
                <Button Content="Skin type test" Width="180" Height="40" Margin="8" FontSize="18" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <!-- Order Details Body -->
        <ScrollViewer Grid.Column="1" Grid.Row="1" Background="#FFF1F1F1">
            <StackPanel>
                <TextBlock Text="Order Details" Margin="10" FontSize="28" FontWeight="Medium"/>

                <ItemsControl x:Name="icOrderDetail">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="15" Padding="10" Background="White" CornerRadius="8" BorderBrush="#CCC" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding Image}" Width="100" Height="100" Grid.Column="0" Margin="5"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:C}}" FontSize="16" Foreground="#555"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Quantity}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                    <TextBlock Text="Grand Total: " FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtGrandTotal" FontSize="18" FontWeight="Bold" Foreground="#FF5733" Margin="5 0 0 0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
