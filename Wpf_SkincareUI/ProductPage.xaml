<Window x:Class="Wpf_SkincareUI.ProductPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        Title="Product Management" Height="650" Width="1310" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Grid Grid.Column="0" Background="#2c3e50">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <!-- Logo / Title -->
            <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#1c2e40">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="Admin Panel" Foreground="White" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Menu Items -->
            <StackPanel Grid.Row="1" Margin="0,20,0,0">
                <!-- Dashboard -->
                <Button x:Name="DashboardBtn" Height="50" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="MenuButton_Click" Tag="Dashboard">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <TextBlock Text="🏠" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Dashboard" Foreground="White" FontSize="14" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Product Management -->
                <Button x:Name="ProductBtn" Height="50" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="ProductManagement_Click" Tag="Products">
                    <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                        <TextBlock Text="📦" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Product Management" Foreground="White" FontSize="14" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Customer Info & Orders -->
                <Button x:Name="CustomerBtn" Height="50" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="CustomerManagement_Click" Tag="Customers">
                    <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                        <TextBlock Text="👤" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Customer Info &amp; Orders" Foreground="White" FontSize="14" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Settings -->
                <Button x:Name="SettingsBtn" Height="50" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="Logout_Click" Tag="Settings">
                    <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                        <TextBlock Text="⚙" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="Logout" Foreground="White" FontSize="14" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#ecf0f1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>

            </Grid.RowDefinitions>

            <!-- Top Header -->
            <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#e0e0e0">
                <Grid>

                    <!-- Thanh tìm kiếm và bộ lọc -->
                    <StackPanel Orientation="Horizontal" Margin="0 10 10 10">
                        <TextBlock Text="Quản lý sản phẩm" FontSize="18" FontWeight="Bold" 
                   Foreground="#2c3e50" VerticalAlignment="Center" Margin="0 0 10 0"/>

                        <!-- Ô tìm kiếm -->
                        <TextBox x:Name="txtSearch" Width="250" Height="36" 
                 VerticalAlignment="Center" Margin="0 0 10 0"
                 
                 BorderBrush="#bdc3c7" BorderThickness="1" />

                        <!-- Nút tìm kiếm -->
                        <Button Content="🔍 Tìm kiếm" Width="120" Height="36" Cursor="Hand"
                Background="#3498db" Foreground="White" FontSize="14" FontWeight="SemiBold"
                BorderThickness="0"  Margin="0 0 10 0" Click="btnSearch_Click"/>

                        <!-- Nút thêm sản phẩm -->
                        <Button Content="➕ Thêm sản phẩm" Width="140" Height="36" Cursor="Hand"
                Background="#27ae60" Foreground="White" FontSize="14" FontWeight="SemiBold"
                BorderThickness="0"  Click="AddProduct_Click"/>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Page Content -->
            <StackPanel Grid.Row="1" Margin="20">


                <DataGrid x:Name="dgProducts" AutoGenerateColumns="False" Height="auto" Margin="0 10 0 0"
          BorderThickness="1" BorderBrush="#E0E0E0" RowBackground="#FFFFFF" AlternatingRowBackground="#F5F5F5"
          CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="True"
          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0E0E0"
          RowHeaderWidth="0" Background="White"
          FontFamily="Segoe UI" FontSize="12"
                             
                              
                              >
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#4267B2"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="#3b5998"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Ảnh sản phẩm">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="3" Margin="3">
                                        <Image Source="{Binding Image}" Width="60" Height="60" Stretch="Uniform">
                                            <Image.Effect>
                                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3" Color="Gray"/>
                                            </Image.Effect>
                                        </Image>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--<DataGridTextColumn Header="ID" Binding="{Binding SkincareProductId}" Width="45">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>-->
                        <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Name}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Dung tích" Binding="{Binding Capacity}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice, StringFormat='{}{0:N0} VNĐ'}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                    <Setter Property="FontWeight" Value="Medium" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Thương hiệu" Binding="{Binding Brand.Name}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontStyle" Value="Italic" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Loại sản phẩm" Binding="{Binding Category.Name}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Trạng thái" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="8,3" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E5F7ED" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                        <Setter Property="Background" Value="#FFDEDE" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Có sẵn" />
                                                    <Setter Property="Foreground" Value="#28A745" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                            <Setter Property="Text" Value="Hết hàng" />
                                                            <Setter Property="Foreground" Value="#DC3545" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Hành động" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Width="40" Height="30" Margin="5,0" Click="EditProduct_Click"
                                Background="#4267B2" BorderBrush="#3b5998" Foreground="White">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="5"/>
                                                </Style>
                                            </Button.Resources>
                                            <Button.Content>
                                                <TextBlock Text="✏" FontSize="14" VerticalAlignment="Center"/>
                                            </Button.Content>
                                            <Button.ToolTip>Chỉnh sửa</Button.ToolTip>
                                        </Button>
                                        <Button Width="40" Height="30" Margin="5,0" Click="DeleteProduct_Click"
                                Background="#DC3545" BorderBrush="#C82333" Foreground="White">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="5"/>
                                                </Style>
                                            </Button.Resources>
                                            <Button.Content>
                                                <TextBlock Text="🗑" FontSize="14" VerticalAlignment="Center"/>
                                            </Button.Content>
                                            <Button.ToolTip>Xóa</Button.ToolTip>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>



                <!--<DataGrid x:Name="dgProducts" AutoGenerateColumns="False" Height="400" Margin="0 10 0 0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Ảnh sản phẩm">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="3">
                                        <Image Source="{Binding Image}" Width="50" Height="50"/>

                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
