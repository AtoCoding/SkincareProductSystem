<Window x:Class="Wpf_SkincareUI.Popup.AddEditPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm/Chỉnh sửa Sản phẩm"
        Height="650" Width="800"
        Background="#D0E7F5" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">
    <Grid Margin="20">
        <Border Background="White" Padding="30" CornerRadius="15" BorderBrush="#A9CCE3" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.Column="0" Margin="15">
                    <TextBlock Text="Tên sản phẩm:" FontWeight="SemiBold" Margin="0 5" Foreground="#1565C0" />
                    <TextBox x:Name="txtName" Height="40" Padding="10" BorderBrush="#8BC34A" BorderThickness="1" Margin="0 5" />

                    <TextBlock Text="Mô tả:" FontWeight="SemiBold" Margin="0 10 0 5" Foreground="#1565C0" />
                    <TextBox x:Name="txtDescription" Height="100" Padding="10" TextWrapping="Wrap" AcceptsReturn="True" BorderBrush="#8BC34A" BorderThickness="1" Margin="0 5" />

                    <TextBlock Text="Dung tích:" FontWeight="SemiBold" Margin="0 10 0 5" Foreground="#1565C0" />
                    <TextBox x:Name="txtCapacity" Height="40" Padding="10" BorderBrush="#8BC34A" BorderThickness="1" Margin="0 5"/>

                    <TextBlock Text="Giá:" FontWeight="SemiBold" Margin="0 10 0 5" Foreground="#1565C0" />
                    <TextBox x:Name="txtUnitPrice" Height="40" Padding="10" BorderBrush="#8BC34A" BorderThickness="1" Margin="0 5"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.Column="1" Margin="15">
                    <TextBlock Text="Số lượng:" FontWeight="SemiBold" Margin="0 5" Foreground="#1565C0" />
                    <TextBox x:Name="txtQuantity" Height="40" Padding="10" BorderBrush="#8BC34A" BorderThickness="1" Margin="0 5"/>

                    <TextBlock Text="Ảnh sản phẩm:" FontWeight="SemiBold" Margin="0 10 0 5" Foreground="#1565C0" />
                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <Button Content="📷 Chọn ảnh" Width="130" Height="40" Click="SelectImage_Click" Background="#4CAF50" Foreground="White" FontWeight="SemiBold" BorderThickness="0" />
                        <Border BorderBrush="#8BC34A" BorderThickness="1" Margin="15 0" CornerRadius="5">
                            <Image x:Name="imgPreview" Width="100" Height="100" Stretch="Uniform" />
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Danh mục:" FontWeight="SemiBold" Margin="0 10 0 5" Foreground="#1565C0" />
                    <ComboBox x:Name="cbCategory" Height="40" SelectionChanged="cbCategory_SelectionChanged" BorderBrush="#64B5F6" BorderThickness="1" Margin="0 5">
                        <ComboBox.Resources>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#212121"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>

                    <TextBlock Text="Thương hiệu:" FontWeight="SemiBold" Margin="0 10 0 5" Foreground="#1565C0" />
                    <ComboBox x:Name="cbBrand" Height="40" BorderBrush="#64B5F6" BorderThickness="1" Margin="0 5">
                        <ComboBox.Resources>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#212121"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <CheckBox x:Name="chkInStock" Content="Còn hàng" FontWeight="SemiBold" Grid.Row="1" Margin="15 10" HorizontalAlignment="Left" Foreground="#1565C0" />

                <UniformGrid Columns="2" Grid.Row="2" HorizontalAlignment="Right" Margin="15 20 15 15">
                    <Button Content="💾 Lưu" Width="120" Height="45" Click="SaveProduct_Click" Background="#2196F3" Foreground="White" FontWeight="SemiBold" BorderThickness="0" />
                    <Button Content="❌ Hủy" Width="120" Height="45" Click="Cancel_Click" Background="#F44336" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Margin="15 0 0 0" />
                </UniformGrid>
            </Grid>
        </Border>
    </Grid>
</Window>