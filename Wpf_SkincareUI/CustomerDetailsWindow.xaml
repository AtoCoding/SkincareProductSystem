<Window x:Class="Wpf_SkincareUI.CustomerDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SkincareUI"
        mc:Ignorable="d"
        Title="CustomerDetailsWindow" Height="450" Width="639"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="50">
            <TextBlock Text="Username:" FontWeight="Bold"/>
            <TextBox Name="txtUsername" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBox Name="txtFullname" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Gender:" FontWeight="Bold"/>
            <TextBox Name="txtGender" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Role:" FontWeight="Bold"/>
            <TextBox Name="txtRole" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Skin Type:" FontWeight="Bold"/>
            <TextBox Name="txtSkinType" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Active Status:" FontWeight="Bold"/>
            <CheckBox Name="chkIsActive" Content="Is Active" Margin="0,0,0,10" IsEnabled="False"/>

            <Button Content="Ok" Width="120" Margin="10" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
